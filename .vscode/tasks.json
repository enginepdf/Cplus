{
    "tasks": [
        {
            "type": "shell",
            "label": "C/C++: clang++ build active file",
            "command": "/usr/bin/clang++",
            "args": [
                "-g",
                "${file}",
                "-o",
                "${fileDirname}/${fileBasenameNoExtension}"
            ],
            "options": {
                "cwd": "${workspaceFolder}"
            },
            "problemMatcher": [
                "$gcc"
            ],
            "group": {
                "kind": "build",
                "isDefault": true
            }
        },
        {
            "type": "shell",
            "label": "C/C++: g++ build active file",
            "command": "/usr/bin/g++",
            "args": [
                "-g", 
                "${file}", 
                "-o", 
                "${fileDirname}/${fileBasenameNoExtension}.out", 
                
                // 1. execute .out file 
                /* 
                "&&", //to join building and running of the file 
                "${fileDirname}/${fileBasenameNoExtension}.out", 
                */ 
                
                //2. file input 
                /* 
                "<", 
                "${fileDirname}/sample_input.txt" 
                */ 
                
                //3. file output 
                /* 
                ">", 
                "${fileDirname}/sample_output.txt" 
                */

            ],
            "options": {
                "cwd": "${workspaceFolder}"
            },
            "problemMatcher": [
                "$gcc"
            ],
            "group": {
                "kind": "build",
                "isDefault": true
            }
        }
    ],
    "version": "2.0.0"
}